source "https://rubygems.org"

gem "jekyll", "~> 4.2.0"
gem 'wdm', '>= 0.1.0', platforms: :mswin

# Windows and JRuby does not include zoneinfo files, so bundle the tzinfo-data gem and associated library.
platforms :mingw, :x64_mingw, :mswin, :jruby do
  gem "tzinfo", "~> 1.2"
  gem "tzinfo-data"
end

gem "webrick", "~> 1.7"
gem 'html-proofer'
gem 'jekyll-gist'
gem 'rouge'
